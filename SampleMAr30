apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: echo-service-ingress
spec:
  hosts:
    - 'sdc.com'
  gateways:
  - sdc-gateway
  http:
  - match:
      - uri:
          prefix: "/sdc1"
    rewrite:
      uri: "/"
    route:
    - destination:
        host: sdc-service
        port:
          number: 18630
